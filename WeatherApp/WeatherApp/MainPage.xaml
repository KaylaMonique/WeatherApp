<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.MainPage" Title="Weather App" BackgroundColor="#5c89dc">

    <StackLayout>
        <Label Text="Today's Weather" VerticalOptions="Start" FontAttributes="Bold"/>
        <Label Text="{Binding main.temp}"/>
        <Label Text="{Binding main.temp_min}"/>
        <Label Text="{Binding main.temp_max}"/>
        <Label Text="{Binding main.pressure}"/>
        <Label Text="{Binding main.humidity}"/>
        <Label Text="{Binding Weather.icon}"/>
        <Label Text="{Binding Wind.speed}"/>
        <Label Text="{Binding Sys.sunrise}"/>
        <Label Text="{Binding Sys.sunset}"/>
    </StackLayout>

</ContentPage>
